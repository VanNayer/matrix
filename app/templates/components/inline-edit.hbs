{{#if editing}}
    <form onsubmit="return false;">
      {{input value=value enter="stopEditing" escape-press='cancelEditing' class='small-input'}}
      {{#if isInvalid}}
          <small class="error man pan">{{invalidMessage}}</small>
      {{/if}}
    </form>
{{else}}
    <a {{action "startEditing"}}>
    {{#if value}}
      {{value}}
  {{else}}
      Add
  {{/if}}
    </a>
{{/if}}