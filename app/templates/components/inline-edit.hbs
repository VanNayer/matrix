{{#if editing}}
    <form onsubmit="return false;">
      {{input value=value enter="stopEditing" escape-press='cancelEditing' class='man pan inline-edit-input'}}
        {{#if isInvalid}}<small class="error man pan">{{invalidMessage}}</small>{{/if}}
    </form>
{{else}}
    <a href="#" {{action "startEditing"}}>{{value}}</a>
{{/if}}